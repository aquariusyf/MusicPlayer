<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dark_star_background">

    <android.support.v4.view.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vp_fragment_list_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_margin="8dp"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/vp_tab_dots"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabBackground="@drawable/tab_selector"
        app:tabGravity="center"
        app:tabIndicatorHeight="0dp"/>

    <TextView
        android:id="@+id/marquee_text"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:fontFamily="@font/xinchaoti"
        android:gravity="center"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:textColor="#9932CC"
        android:textSize="24sp"
        tools:text="告白气球" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/timer_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/charlotte"
            android:textSize="10sp"
            android:text="00 : 00"/>

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:layout_centerInParent="true"
            android:thumbTint="#F5F5F5"
            android:progressTint="#FFFFFF"
            android:progressBackgroundTint="#FFF8DC"
            android:thumb="@drawable/baseline_audiotrack_white_18dp" />

        <TextView
            android:id="@+id/total_time_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="@font/charlotte"
            android:text="00 : 00"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp">

        <ImageView
            android:src="@drawable/repeat_all_icon"
            android:background="@drawable/round_shape_selected"
            android:id="@+id/repeat_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp" />

        <ImageView
            android:src="@drawable/baseline_skip_previous_white_18dp"
            android:id="@+id/previous_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp"/>

        <ImageView
            android:src="@mipmap/play_button_icon"
            android:id="@+id/play_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true" />

        <ImageView
            android:src="@drawable/baseline_skip_next_white_18dp"
            android:id="@+id/next_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"/>

        <ImageView
            android:src="@drawable/shuffle_icon"
            android:background="@drawable/round_shape_selected"
            android:id="@+id/shuffle_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_alignParentLeft="true"
            android:layout_margin="16dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="36dp">

        <ImageView
            android:id="@+id/mute_image_view"
            android:src="@drawable/volume_on_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="48dp"/>

        <SeekBar
            android:id="@+id/volume_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:thumbTint="#F5F5F5"
            android:progressTint="#FFFFFF"
            android:progressBackgroundTint="#FFF8DC"
            android:thumb="@drawable/pets_icon" />

        <TextView
            android:id="@+id/volume_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:fontFamily="@font/charlotte"
            tools:text="50%"/>
    </LinearLayout>

</LinearLayout>