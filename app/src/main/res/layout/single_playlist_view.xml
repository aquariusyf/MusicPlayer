<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/delete_button"
        android:src="@mipmap/delete_playlist_unselected_icon"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="16dp"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/single_playlist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:gravity="left"
        tools:text="PlayList Name"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/number_of_songs_in_playlist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="16dp"
        tools:text="666 Songs"
        android:gravity="right"
        android:textColor="#FFFFFF"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/play_this_list_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp"
        android:background="@mipmap/play_button_icon"/>

</LinearLayout>