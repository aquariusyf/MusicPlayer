<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <ImageView
            android:id="@+id/cancel_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="left"
            android:src="@mipmap/cancel_create_edit_icon" />

        <TextView
            android:id="@+id/play_list_editor_titile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:layout_marginTop="8dp"
            android:gravity="center"
            tools:text="New Playlist"
            android:fontFamily="@font/calibri"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"/>

        <ImageView
            android:id="@+id/confirm_create"
            android:src="@mipmap/confirm_create_icon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Name: "
            android:textColor="#FFFFFF"
            android:fontFamily="@font/calibri"
            android:gravity="center"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/input_name_edit_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="Input name"
            android:textColorHint="#43E1D6"
            android:inputType="textCapSentences"
            android:fontFamily="@font/calibri"/>
    </LinearLayout>

    <TextView
        android:id="@+id/add_songs_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:gravity="center_vertical"
        android:drawableLeft="@mipmap/create_play_list_menu_icon"
        android:text="Add Songs"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/calibri"/>

    <ListView
        android:id="@+id/media_pool_for_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

    </ListView>

</LinearLayout>